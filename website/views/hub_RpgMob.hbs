<style type="text/css">
  .health-box {
    background-color: #ccc;
    height: 12px;
    width: 80%;
    margin: 0 auto;
    border: solid 1px var(--color_2);
  }

  .health-bar {
    background-color: #007f00;
    width: 100%;
    height: 100%;
    position: relative;
    bottom: 20px;
  }

  .health-bar-red {
    width: 100%;
    height: 100%;
    background-color: #cc0000;
  }

  .health-bar-blue {
    width: 100%;
    height: 100%;
    background-color: #3bd3df;
    bottom: 10px;
    position: relative;
  }

  .health-bar-text {
    position: relative;
    bottom: 32px;
  }
</style>

